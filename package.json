{
  "name": "what-to-watch",
  "version": "1.0.0",
  "description": "Проект «Что посмотреть» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run ts ./src/main.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "ts-node src/cli.ts",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "6.1.1",
    "@types/convict-format-with-validator": "6.0.2",
    "@types/express": "4.17.14",
    "@types/mime-types": "2.1.1",
    "@types/multer": "1.4.7",
    "@types/node": "18.11.13",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "chalk": "5.0.1",
    "eslint": "8.29.0",
    "eslint-config-htmlacademy": "8.0.0",
    "json-server": "0.17.1",
    "mime-types": "2.1.35",
    "multer": "1.4.5-lts.1",
    "nanoid": "4.0.0",
    "pino-pretty": "9.1.1",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "type": "module",
  "engines": {
    "node": "16.13.1",
    "npm": "8.1.2"
  },
  "dependencies": {
    "@typegoose/typegoose": "9.13.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "convict": "6.2.3",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.7",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-async-handler": "1.2.0",
    "got": "12.5.3",
    "http-status-codes": "2.2.0",
    "inversify": "6.0.1",
    "mongoose": "6.7.2",
    "pino": "8.7.0",
    "reflect-metadata": "0.1.13"
  }
}
